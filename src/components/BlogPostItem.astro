---
const { url, title, description, pubDate, image } = Astro.props;
const shorDate = new Date(pubDate).toLocaleDateString();
---

<style>
  li {
    list-style-type: none;
    padding: 1em;
    margin: 0;
    margin-bottom: 0.15em;

    &:hover {
      background-color: #66666666;
    }
  }

  a {
    display: flex;
    gap: 1em;

    &:hover {
      text-decoration: none;
    }

    & * {
      margin: 0;
      padding: 0;
      color: var(--text-main);
    }
  }

  h2 {
    font-size: 1.2em;
    margin: 0;
  }

  .image-wrapper {
    --img-w: 150px;
    --img-h: 100px;
    width: var(--img-w);
    max-width: var(--img-w);
    min-width: var(--img-w);
    height: var(--img-h);
    max-height: var(--img-h);
    max-width: var(--img-h);
    overflow: hidden;
    border-radius: 0.5em;

    & img {
      width: 100%;
      height: 100%;
      object-fit: fill;
    }
  }
</style>

<li>
  <a href={url}>
    <div class="image-wrapper">
      {
        image?.url ? (
          <img
            src={image.url}
            width="150"
            alt={image.alt ? image.alt : "Image with no alt text"}
          />
        ) : null
      }
    </div>
    <div>
      <h2>{title}</h2>
      <p>{shorDate}</p>
      <p>{description}</p>
    </div>
  </a>
</li>
